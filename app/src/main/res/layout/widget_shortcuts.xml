<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="56dp"
    android:background="@color/colorPrimary"
    tools:ignore="Overdraw">

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/imageButton"
        android:src="@mipmap/ic_launcher"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/imageButton2"
        android:src="@mipmap/ic_bookmark"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageButton3" />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/imageButton3"
        android:src="@mipmap/ic_note"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageButton4" />

    <ImageButton
        tools:ignore="ContentDescription"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/imageButton4"
        android:src="@mipmap/ic_note_plus"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_short"
        android:textSize="24sp"
        android:id="@+id/textView"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/abc_primary_text_material_dark"
        tools:ignore="PrivateResource,RelativeOverlap"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_4">

        <EditTextPreference
            android:title="@string/action_username"
            android:summary="@string/action_username_summary"
            android:key="username" />

        <EditTextPreference
            android:title="@string/action_password"
            android:summary="@string/action_password_summary"
            android:key="password" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_2">

        <ListPreference
            android:title="@string/action_tabMain"
            android:summary="@string/action_tabMain_summary"
            android:key="tabMain"
            android:defaultValue="1"
            android:entries="@array/listArrayTabMain"
            android:entryValues="@array/listValuesTabMain" />

        <CheckBoxPreference
            android:title="@string/action_longPress"
            android:summary="@string/action_longPress_summary"
            android:key="longPress"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:title="@string/action_java"
            android:summary="@string/action_java_summary"
            android:key="java"
            android:defaultValue="true" />

        <Preference
            android:title="@string/action_openSettings"
            android:summary="@string/action_openSettings_summary"
            android:key="clearCache" />

        <Preference
            android:title="@string/action_clearSettings"
            android:summary="@string/action_clearSettings_summary"
            android:key="clearSettings" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_3">

        <CheckBoxPreference
            android:title="@string/action_notShow_title"
            android:summary="@string/action_notShow_title_summary"
            android:key="help_notShow"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:title="@string/perm_notShow_title"
            android:summary="@string/perm_notShow_title_summary"
            android:key="perm_notShow"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_1">

        <Preference
            android:title="@string/action_changelog"
            android:summary="@string/action_changelog_summary"
            android:key="changelog" />

        <Preference
            android:title="@string/action_license"
            android:summary="@string/action_license_summary"
            android:key="license" />

    </PreferenceCategory>

</PreferenceScreen>
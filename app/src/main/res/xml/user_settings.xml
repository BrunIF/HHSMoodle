<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_5">

        <Preference
            android:title="@string/action_username"
            android:icon="@drawable/key"
            android:summary="@string/action_username_summary"
            android:key="username" />

        <Preference
            android:title="@string/action_protect"
            android:icon="@drawable/close_circle_outline"
            android:summary="@string/action_protect_summary"
            android:key="protect_PW" />

        <Preference
            android:title="@string/action_backup"
            android:icon="@drawable/backup_restore"
            android:summary="@string/action_backup_summary"
            android:key="backup_db" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_2">

        <ListPreference
            android:title="@string/action_tabMain"
            android:icon="@drawable/cellphone_iphone"
            android:summary="@string/action_tabMain_summary"
            android:key="tabMain"
            android:defaultValue="1"
            android:entries="@array/listArrayTabMain"
            android:entryValues="@array/listValuesTabMain" />

        <ListPreference
            android:title="@string/action_start"
            android:icon="@drawable/cursor_pointer"
            android:summary="@string/action_start_summary"
            android:key="startType"
            android:defaultValue="1"
            android:entries="@array/listArrayStart"
            android:entryValues="@array/listValuesStart" />

        <CheckBoxPreference
            android:title="@string/action_longPress"
            android:icon="@drawable/exit_to_app"
            android:summary="@string/action_longPress_summary"
            android:key="longPress"
            android:defaultValue="true" />

        <ListPreference
            android:title="@string/action_font"
            android:icon="@drawable/format_size"
            android:summary="@string/action_font_summary"
            android:key="font"
            android:defaultValue="100"
            android:entries="@array/listArrayFont"
            android:entryValues="@array/listValuesFont" />

        <Preference
            android:title="@string/action_openSettings"
            android:icon="@drawable/settings"
            android:summary="@string/action_openSettings_summary"
            android:key="clearCache" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_3">

        <CheckBoxPreference
            android:title="@string/action_notShow_title"
            android:icon="@drawable/information_outline"
            android:summary="@string/action_notShow_title_summary"
            android:key="help_notShow"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:title="@string/perm_notShow_title"
            android:icon="@drawable/security"
            android:summary="@string/perm_notShow_title_summary"
            android:key="perm_notShow"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:title="@string/action_help"
            android:icon="@drawable/comment_question_outline"
            android:summary="@string/action_help_summary"
            android:key="help"
            android:defaultValue="false" />

        <Preference
            android:title="@string/action_problem"
            android:icon="@drawable/bug"
            android:summary="@string/action_problem_summary"
            android:key="problem" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_1">

        <Preference
            android:title="@string/action_changelog"
            android:icon="@drawable/format_list_bulleted"
            android:summary="@string/action_changelog_summary"
            android:key="changelog" />

        <Preference
            android:title="@string/action_license"
            android:icon="@drawable/copyright"
            android:summary="@string/action_license_summary"
            android:key="license" />

    </PreferenceCategory>

</PreferenceScreen>